extends ../base.pug

block content
    form(action=`/instructors/${todo.instructor.id}/todos/${todo.id}?_method=PATCH` method="POST")
        input(type="text", name="task" value=`${todo.task}`)
        input(type="submit", value="Submit!")
    form(action=`/instructors/${todo.instructor.id}/todos/${todo.id}?_method=DELETE` method="POST")
        input(type="submit", value="X")